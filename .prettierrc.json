{
   "$schema": "https://json.schemastore.org/prettierrc",
   "semi": true,
   "singleQuote": true,
   "printWidth": 100,
   "tabWidth": 3,
   "trailingComma": "es5",
   "bracketSpacing": true,
   "arrowParens": "avoid",
   "endOfLine": "lf",
   "plugins": ["prettier-plugin-svelte"],
   "overrides": [
      {
         "files": "*.md",
         "options": {
            "printWidth": 90,
            "proseWrap": "always"
         }
      },
      {
         "files": "*.json",
         "options": {
            "tabWidth": 3
         }
      },
      {
         "files": "*.svelte",
         "options": {
            "parser": "svelte"
         }
      }
   ]
}
